<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1482112048165-dd23f81c367d?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80);">
  <div class="container">
    <h1>As simple as drinking</h1>
    <p>Create and personnalize your cocktails!</p>
  </div>
</div>

<div class="container text-center mt-4">
    <div class="container ">
      <div class="row">
        <% @cocktails.each do |cocktail| %>
            <div class="col-4 mb-3 card-index">
              <div class="card-category w-100" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo, width: 250, height: 300, crop: :fill %>)">
                <%= link_to cocktail_path(cocktail) do %>
                <%= cocktail.name %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
</div>











